{
    "compilerOptions": {
        "target": "es2021",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@domain/": [
                "./src/domain/"
            ],
            "@infra/": [
                "./src/infra/"
            ]
        }
    }
}
